<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.maksim_zakharenka.autoshop"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".Core"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.auth.LoginActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>


                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.client.MainActivity"/>
        <activity
            android:name=".activity.auth.RegistrationActivity"
            android:noHistory="true"/>
        <activity android:name=".activity.admin.ManufacturersActivity"/>
        <activity android:name=".activity.admin.AdminActivity"/>
        <activity android:name=".activity.admin.CategoriesActivity"/>
        <activity android:name=".activity.admin.ClientsActivity"/>
        <activity android:name=".activity.admin.AdminProductsActivity"/>
    </application>

</manifest>